<div class="row-fluid">
  <div class="span6 offset3 well" style="overflow: auto;">
    <%= @upload_dir %>
    <h2 class="text-center">Manage Files</h2>
    <%= render :partial => 'shared/flash_messages'%>
    <% if @files && @files.count > 0 %>
      <table class='table table-striped'>
        <tr>
          <th>Name</th>
          <th>Action</th>
        </tr>
        <% for file in @files %>
          <tr>
            <td><%= file.filename %></td>
            <td>
              <%= link_to raw('<i class="icon-trash"></i>'), { :action => "delete", :filename => file.filename },
                :title => "Delete File", :confirm => "Are you sure you want to delete this file?", :method => :delete %>
            </td>
          </tr>
        <% end %>
      </table>
    <% else %>
      No Files Found
    <% end %>
    <br/>
    <div class="controls text-right">
      <%= form_tag("files/upload", multipart: true) do |form| %>
        <%= file_field_tag "file"%>
        <%= link_to "cancel", "/" %>
        <%= submit_tag "Upload File", :class => "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
